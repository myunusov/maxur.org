<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
                            http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distribution</id>
    <formats>
        <format>dir</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${basedir}/../../felix</directory>
            <includes>
                <include>DEPENDENCIES</include>
                <include>LICENSE</include>
                <include>LICENSE.kxml2</include>
                <include>NOTICE</include>
                <include>start.sh</include>
                <include>stop.sh</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../felix/bin</directory>
            <includes>
                <include>*.*</include>
            </includes>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/runner/bundles</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>/bundles</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/config/DEV/services</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <outputDirectory>/conf/services</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/config/DEV/factories</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <outputDirectory>/conf/factories</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/bundles</outputDirectory>
        </dependencySet>
    </dependencySets>


    <files>
        <file>
            <source>${basedir}/config/${env}/config.properties</source>
            <outputDirectory>/conf</outputDirectory>
            <destName>config.properties</destName>
        </file>

        <file>
            <source>README.txt</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>LICENSE.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>NOTICE.txt</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>
</assembly>